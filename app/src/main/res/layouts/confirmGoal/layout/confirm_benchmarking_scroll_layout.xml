<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- Benchmarking 1 -->
            <TextView
                android:id="@+id/confirm_benchmarking_topTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="@string/Benchmarking_topTitle"
                android:textSize="25sp" />

            <TextView
                android:id="@+id/benchmarking_1_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="@string/Benchmarking_1_title"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/confirm_benchmarking_explanation"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="@string/Benchmarking_1_explanation"
                android:textSize="15sp" />

            <!-- Benchmarking 2 -->
            <TextView
                android:id="@+id/confirm_benchmarking_GoalTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="@string/Benchmarking_2_title"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/confirm_benchmarking_GoalTextView"
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:layout_marginTop="8dp"
                android:textSize="15sp" />

            <!-- Benchmarking 3 -->
            <TextView
                android:id="@+id/confirm_benchmarking_TargetTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="@string/Benchmarking_3_title"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/confirm_benchmarking_TargetTextView"
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:layout_marginTop="8dp"
                android:textSize="15sp" />

            <!-- Benchmarking 4 -->
            <TextView
                android:id="@+id/confirm_benchmarking_BenchmarkTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="@string/Benchmarking_4_title"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/confirm_benchmarking_BenchmarkTextView"
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:layout_marginTop="8dp"
                android:textSize="15sp" />

            <!-- Benchmarking 5 -->
            <TextView
                android:id="@+id/confirm_benchmarking_ComparisonTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="@string/Benchmarking_5_title"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/confirm_benchmarking_ComparisonTextView"
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:layout_marginTop="8dp"
                android:textSize="15sp" />

            <!-- Next and Back Buttons -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:gravity="center"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/confirm_benchmarking_nextButton"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="8dp"
                    android:layout_weight="1"
                    android:text="@string/Button_Next"
                    android:textSize="15sp" />

                <Button
                    android:id="@+id/confirm_benchmarking_backButton"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:layout_weight="1"
                    android:text="@string/Button_Back"
                    android:textSize="15sp" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

    <Button
        android:id="@+id/confirm_benchmarking_Edit_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="top|end"
        android:layout_margin="16dp"
        android:text="@string/Confirm_EditButton" />

</FrameLayout>