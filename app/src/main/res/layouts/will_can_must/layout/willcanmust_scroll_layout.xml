<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- WillCanMust 1 -->
        <TextView
            android:id="@+id/WillCanMust_scrollLayout_topTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/WillCanMust_topTitle"
            android:textSize="25sp"
            android:layout_marginTop="16dp" />

        <TextView
            android:id="@+id/WillCanMust_scrollLayout_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/WillCanMust_1_title"
            android:textSize="20sp"
            android:layout_marginTop="8dp" />

        <TextView
            android:id="@+id/WillCanMust_scrollLayout_explanation"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/WillCanMust_1_explanation"
            android:textSize="16sp"
            android:layout_marginTop="8dp" />

        <!-- WillCanMust 2 -->

        <TextView
            android:id="@+id/WillCanMust_Will_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/WillCanMust_2_title"
            android:textSize="20sp"
            android:layout_marginTop="8dp" />

        <EditText
            android:id="@+id/WillCanMust_editText_Will"
            android:layout_width="match_parent"
            android:layout_height="67dp"
            android:hint="@string/EditText_hint"
            android:textSize="15sp"
            android:inputType="text"
            android:layout_marginTop="8dp" />

        <!-- WillCanMust 3 -->

        <TextView
            android:id="@+id/WillCanMust_Can_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/WillCanMust_3_title"
            android:textSize="20sp"
            android:layout_marginTop="8dp" />

        <EditText
            android:id="@+id/WillCanMust_editText_Can"
            android:layout_width="match_parent"
            android:layout_height="67dp"
            android:hint="@string/EditText_hint"
            android:textSize="15sp"
            android:inputType="text"
            android:layout_marginTop="8dp" />

        <!-- WillCanMust 4 -->
        <TextView
            android:id="@+id/WillCanMust_Must_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/WillCanMust_4_title"
            android:textSize="20sp"
            android:layout_marginTop="8dp" />

        <EditText
            android:id="@+id/WillCanMust_editText_Must"
            android:layout_width="match_parent"
            android:layout_height="67dp"
            android:hint="@string/EditText_hint"
            android:textSize="15sp"
            android:inputType="text"
            android:layout_marginTop="8dp" />

        <!-- WillCanMust 5 -->
        <TextView
            android:id="@+id/WillCanMust_Goal_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/WillCanMust_5_title"
            android:textSize="20sp"
            android:layout_marginTop="8dp" />

        <EditText
            android:id="@+id/WillCanMust_editText_Goal"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:hint="@string/EditText_hint"
            android:textSize="15sp"
            android:inputType="text"
            android:layout_marginTop="8dp" />

        <!-- Save and Back Buttons -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginTop="16dp">

            <Button
                android:id="@+id/willCanMust_saveButton"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/Button_Save"
                android:textSize="15sp"
                android:layout_marginEnd="8dp" />

            <Button
                android:id="@+id/willCanMust_backButton"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/Button_Back"
                android:textSize="15sp"
                android:layout_marginStart="8dp" />
        </LinearLayout>
    </LinearLayout>
</ScrollView>