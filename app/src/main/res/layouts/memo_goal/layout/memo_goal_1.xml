<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <TextView
            android:id="@+id/memo_goal_1_topTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/Memo_Goal_topTitle"
            android:textSize="25sp"
            android:layout_marginTop="64dp"
            android:layout_marginBottom="64dp"
            android:gravity="center"
            android:layout_gravity="center_horizontal"/>

        <TextView
            android:id="@+id/memo_goal_1_title"
            android:layout_width="match_parent"
            android:layout_height="40sp"
            android:text="@string/Memo_Goal_title"
            android:textSize="20sp"
            android:layout_marginTop="64dp"
            android:layout_marginBottom="128dp"
            android:gravity="center"
            android:layout_gravity="center_horizontal"/>

        <EditText
            android:id="@+id/memo_goal_1_editText"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:layout_marginStart="32dp"
            android:layout_marginEnd="32dp"
            android:ems="10"
            android:hint="@string/EditText_hint"
            android:inputType="text"
            android:textSize="15sp"
            android:layout_marginTop="64dp"
            android:layout_marginBottom="128dp"
            android:layout_gravity="center_horizontal"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="128dp"
            android:gravity="center"
            android:orientation="horizontal">

            <Button
                android:id="@+id/memo_goal_1_saveButton"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/Button_Save"
                android:textSize="15sp"
                android:layout_marginEnd="8dp" />

            <Button
                android:id="@+id/memo_goal_1_backButton"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/Button_Back"
                android:textSize="15sp"
                android:layout_marginStart="8dp"/>
        </LinearLayout>
    </LinearLayout>
</ScrollView>
